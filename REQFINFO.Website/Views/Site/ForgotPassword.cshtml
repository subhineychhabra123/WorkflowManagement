@model REQFINFO.Website.Models.ForgotPassword
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<script>
    $(function () {
        $("#Email").tooltipValidation({
            placement: "top",
        });

     
    });
</script>

@using (Html.BeginForm("ForgotPassword", "Site", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="main-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <section class="login-page">
                        <div class="col-lg-4 col-md-3 col-sm-2 col-xs-12"></div>
                        <div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">
                            <div class="theme-title">
                                   <div class="theme-title-border">
                                <i class="fa fa-lock"></i><span>Forgot Password</span>
                            </div>
                                </div>
                            <div class="panel panel-blue-theme">
                                <div class="panel-body">
                                    @if (TempData["ValidationMsg"] != null)
                                    {
                                        <div class="alert alert-danger alert-theme" role="alert">
                                            <a href="#" class="alert-link">@TempData["ValidationMsg"].ToString()</a>
                                        </div>
                                    }
                                    @if (TempData["SuccessMsg"] != null)
                                    {
                                        <div class="alert alert-success alert-theme" role="alert">
                                            <a href="#" class="alert-link">@TempData["SuccessMsg"].ToString()</a>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <label class="text-normal">Email</label><span class="error">*</span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                    </div>

                                    @Html.ValidationMessageFor(m => m.Email)


                                         <div class="forgot-password">
											<a href="/Login" >Back to login</a>
										</div>
                                   
                                    <div class="pull-left">
                                        <button class="btn btn-theme btn-md" type="submit">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3 col-sm-2 col-xs-12"></div>
                    </section>
                </div>
            </div>
        </div>
    </div>
}