@using REQFINFO.Website.Models
@model LoginVM
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
  
}
<style>

errormessager{
color:red;
}
</style>
 
<script>
    $(function () {
        $("#EmailAddress").tooltipValidation({
            placement: "top",


        });

      

        $("#Password").tooltipValidation({
            placement: "top"
        });
    });

    
    </script>

@using (Html.BeginForm("Login","Site",FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
<div class="main-content"   >
			<div class="container" >
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<section class="login-page" >
							<div class="col-lg-4 col-md-3 col-sm-2 col-xs-12"></div>
							<div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">
								<div class="theme-title">
									
                                    <div class="theme-title-border">
                                        <i class="fa fa-lock"></i>
                                     <span>Login</span>
                                        </div>
								</div>
								<div class="panel panel-blue-theme">
									<div class="panel-body">	
                                        @if(ViewBag.ValidationMsg !=null)
                                        {
                                        <div class="alert alert-danger alert-theme" role="alert">
                                            <a href="#" class="alert-link">@ViewBag.ValidationMsg</a>
                                        </div>
                                        }						
										<div class="form-group">
											<label class="text-normal" >Email</label>	<span class="error">*</span>									
                                                 @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Email" })                                      
										</div>
                                        
											    @Html.ValidationMessageFor(m => m.EmailAddress)
                                       
										
										<div class="form-group">
											<label class="text-normal">Password</label> <span class="error">*</span>
											   @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })

										</div>
										
											    @Html.ValidationMessageFor(m => m.Password)
										
										<div class="forgot-password">
											<a href="/ForgotPassword">Forgot Password?</a>
										</div>
										<div class="pull-left">
											<button class="btn btn-theme btn-md"  type="submit">Login</button>
											
										</div>
									</div>
								</div>
							</div>				
							<div class="col-lg-4 col-md-3 col-sm-2 col-xs-12"></div>	
						</section>
					</div>
				</div>
			</div>
</div>
}